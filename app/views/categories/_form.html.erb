<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if category.ctype == "outcome" %>
    <div class = "one_item_outcome">
  <% else %>
    <div class = "one_item_income">
  <% end %>

      <div class = "form">

        <div>
          <%= form.hidden_field :ctype %>
        </div>
      
        <div>
          <%= form.label :name, "Назва:", style: "display: block" %>
          <%= form.text_field :name, placeholder: "Ввести назву категорії" %>
        </div>

        <div>
          <%= form.label :description, "Опис:", style: "display: block" %>
          <%= form.text_area :description, size: "30x5", placeholder: "Ввести опис категорії" %>
        </div>

        <div>
          <%= form.button nil, class: "btn btn-success" do %>
            <i class="bi bi-check-lg"></i> Підтвердити
          <% end %>
        </div>

      </div>

    </div>

<% end %>
