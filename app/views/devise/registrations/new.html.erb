<h2><%= t('.title') %></h2>

<div class = "devise_item">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, t('.username') %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label :email, t('.email') %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :favorite_locale, t('.favoritelocale') %><br />
      <%= f.select :favorite_locale, map_locale_names, selected: I18n.default_locale %>
    </div>

    <div class="field">
      <%= f.label :password, t('.password.new') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('.password.characters') %>):</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('.password.newconfirm') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <br />
      <%= f.button nil, class: "btn btn-success" do %>
        <i class="bi bi-door-open"></i> <%= t('.title') %>
      <% end %>
    </div>
  <% end %>

</div>
